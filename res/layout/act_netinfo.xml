		<!--         			android:background="#75b0e4" />    -->
		    			
		        		<LinearLayout 
		        		    android:layout_height="wrap_content"
		 		           	android:layout_width="fill_parent"
		 		           	android:padding="10dip"
		 		           	>
					        <TextView
					            android:text="@string/lblnetSituation"
					            android:layout_width="fill_parent"
						        android:layout_height="wrap_content"
						        android:layout_weight="1"
						        android:textSize="20dip"
						        android:textColor="#174a76"
						        android:textStyle="bold"
						        android:gravity="left"
						        android:paddingRight="5dip"
						        />
					        <TextView
						        android:id="@+id/netSituation"
						        android:layout_width="fill_parent"
						        android:layout_height="wrap_content"
						        android:layout_weight="1"
						        android:textSize="20dip"
						        android:textColor="#000"
						        android:text="TextView" 
						        android:gravity="left"
						        />
		    			</LinearLayout>
		    			
		        		<View
		        			android:layout_height="1dip"
		        			android:layout_width="fill_parent"
		        			android:background="#75b0e4" 
		        			android:paddingTop="10dip"/> 
		        		    
		        		<LinearLayout
		 		           android:layout_height="wrap_content"
		 		           android:layout_width="fill_parent"
		 		           android:paddingTop="10dip"
		 		           android:paddingLeft="10dip"
		 		           >
					        <TextView
						        android:layout_width="fill_parent"
						        android:layout_height="wrap_content"
						        android:gravity="left"
						        android:text="@string/lblnetPosition" 
						        android:textColor="#174a76"
						        android:textStyle="bold"
						        android:textSize="20dip"
						        />
					        
		    			</LinearLayout>
		        		    
		    			<LinearLayout 
							android:layout_height="wrap_content"
		 		            android:layout_width="fill_parent"
		 		            android:orientation="vertical"
		 		            android:paddingBottom="10dip"
		 		            >
					        <LinearLayout 
								android:layout_height="wrap_content"
			 		            android:layout_width="fill_parent"
			 		            android:orientation="horizontal">
						        <TextView
						            android:text="@string/lblnetPosLatitude"
						            android:layout_width="fill_parent"
							        android:layout_height="wrap_content"
							        android:layout_weight="1"
							        android:textSize="15dip"
							        android:textColor="#174a76"
							        android:textStyle="bold"
							        android:gravity="center"
							        />
						        <TextView
						            android:text="@string/lblnetPosLongitude"
						            android:layout_width="fill_parent"
							        android:layout_height="wrap_content"
							        android:layout_weight="1"
							        android:textSize="15dip"
							        android:textColor="#174a76"
							        android:textStyle="bold"
							        android:gravity="center"
							        />
						        <TextView
						            android:text="@string/lblnetPosAltitude"
						            android:layout_width="fill_parent"
							        android:layout_height="wrap_content"
							        android:layout_weight="1"
							        android:textSize="15dip"
							        android:textColor="#174a76"
							        android:textStyle="bold"
							        android:gravity="center"
							        />	
					    	</LinearLayout>
					    	<LinearLayout 
								android:layout_height="wrap_content"
			 		            android:layout_width="fill_parent"
			 		            android:orientation="horizontal">
					        	<TextView
							        android:id="@+id/netPosLatitude"
							        android:layout_width="fill_parent"
							        android:layout_height="wrap_content"
							        android:layout_weight="1"
							        android:textSize="15dip"
							        android:textColor="#000"
							        android:text="TextView"
							        android:gravity="center"
							         />
					        	<TextView
							        android:id="@+id/netPosLongitude"
							        android:layout_width="fill_parent"
							        android:layout_height="wrap_content"
							        android:layout_weight="1"
							        android:textSize="15dip"
							        android:textColor="#000"
							        android:text="TextView"
							        android:gravity="center"
							         />
					        	<TextView
							        android:id="@+id/netPosAltitude"
							        android:layout_width="fill_parent"
							        android:layout_height="wrap_content"
							        android:layout_weight="1"
							        android:textSize="15dip"
							        android:textColor="#000"
							        android:text="TextView"
							        android:gravity="center"
							         />
					    	</LinearLayout>    
		    			</LinearLayout>
		    			
		    			<View
		        			android:layout_height="1dip"
		        			android:layout_width="fill_parent"
		        			android:background="#75b0e4"
		        			android:padding="10dip" />
		    			
		 				<LinearLayout 
		        		    android:layout_height="wrap_content"
		 		           	android:layout_width="fill_parent"
		 		           	android:paddingTop="10dip"
		 		           	android:paddingLeft="10dip"
		 		           	android:paddingBottom="10dip">
					        <TextView
					            android:text="@string/lblnetNumSensors"
					            android:layout_width="fill_parent"
						        android:layout_height="wrap_content"
						        android:layout_weight="1"
						        android:textSize="20dip"
						        android:textColor="#174a76"
						        android:textStyle="bold"
						        android:gravity="left"
						        android:paddingRight="5dip"
						        />
					        <TextView
						        android:id="@+id/netNumSensors"
						        android:layout_width="fill_parent"
						        android:layout_height="wrap_content"
						        android:layout_weight="1"
						        android:textSize="20dip"
						        android:textColor="#000"
						        android:text="TextView" 
						        android:gravity="left"
						        />
		    			</LinearLayout>       
		    			
		<!--     			<View -->
		<!--         			android:layout_height="1dip" -->
		<!--         			android:layout_width="fill_parent" -->
		<!--         			android:background="#75b0e4" -->
		<!--         			android:padding="10dip" />     -->
		        		<LinearLayout 
		        		    android:layout_height="wrap_content"
		 		           	android:layout_width="fill_parent"
		 		           	android:padding="10dip"
		 		           	>
		    				<Button 
					            android:id="@+id/btnLoadSensors"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_weight="1"
					            android:padding="5dip"
					            android:layout_marginRight="2dip"
					            android:textColor="#FFF"
					            android:textSize="20dip"
					            android:text="@string/lblnetLoadSensors"
					            android:background="@drawable/custom_button"/>
		    				<Button 
					            android:id="@+id/btnLoadImages"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
								android:layout_weight="1"
					            android:padding="5dip"
					            android:layout_marginLeft="2dip"
					            android:textColor="#FFF"
					            android:textSize="20dip"
					            android:text="@string/lblnetLoadImages"
					            android:background="@drawable/custom_button"/>
		    				
		   			    </LinearLayout>
		    </LinearLayout>
		</ScrollView>
</LinearLayout>