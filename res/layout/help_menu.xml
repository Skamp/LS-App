<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fillViewport="true">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:background="#FFFFFF">
 
	    <!-- Message -->
	    <TextView
	        android:padding="5dip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/help_message"
	        android:textSize="15dip"
	        android:gravity="center"
	        android:textColor="#000"
	    />
	    <!-- Net List -->
        <LinearLayout 
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="5dip"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			>  
      
			<LinearLayout
				android:orientation="vertical"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
				>
				<TextView

			        android:paddingLeft="5dip"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="top"
			        android:text="@string/act_lbl_homNetList"
			        android:textSize="20dip"
			        android:textColor="#174a76"
			        android:textStyle="bold"
			    />
				<LinearLayout
			        android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    >    
				    <ImageView 
					    android:src="@drawable/dshb_btn_hom_01_netlist"
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content"
				    />
			        <TextView

				        android:paddingLeft="5dip"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:gravity="top"
				        android:text="@string/help_homNetList"
				        android:textColor="#000000"
				    />        
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	    
        <!-- Net Maps -->
	    <LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="5dip"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"> 
	      
	        <LinearLayout
				android:orientation="vertical"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
				>
	      
				<TextView
			        android:paddingTop="5dip"
			        android:paddingLeft="5dip"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:gravity="top"
			        android:text="@string/act_lbl_homNetMaps"
			        android:textSize="20dip"
			        android:textColor="#174a76"
			        android:textStyle="bold"
			    />
	      	  	<LinearLayout
			        android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    >   
	        
				    <ImageView 
					    android:src="@drawable/dshb_btn_hom_02_netmaps"
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content"
				    />
				    
				    <TextView
				        android:paddingTop="5dip"
				        android:paddingLeft="5dip"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:gravity="top"
				        android:text="@string/help_homNetMaps"
				        android:textColor="#000000"
				    />        
			    </LinearLayout>
	    	</LinearLayout>
	    </LinearLayout>
    
		<!-- QR Code -->
	    <LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="5dip"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"> 
	      
	        <LinearLayout
				android:orientation="vertical"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
				>
	      
				<TextView
			        android:paddingTop="5dip"
			        android:paddingLeft="5dip"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:gravity="top"
			        android:text="@string/act_lbl_homQRCode"
			        android:textSize="20dip"
			        android:textColor="#174a76"
			        android:textStyle="bold"
			    />
	      	  	<LinearLayout
			        android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    >   
	        
				    <ImageView 
					    android:src="@drawable/dshb_btn_hom_03_qrcode"
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content"
				    />
				    
				    <TextView
				        android:paddingTop="5dip"
				        android:paddingLeft="5dip"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:gravity="top"
				        android:text="@string/help_homQRCode"
				        android:textColor="#000000"
				    />        
			    </LinearLayout>
	    	</LinearLayout>
	    </LinearLayout>
	        
	    <!-- Favourites -->
	    <LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="5dip"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"> 
	      
	        <LinearLayout
				android:orientation="vertical"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
				>
	      
				<TextView
			        android:paddingTop="5dip"
			        android:paddingLeft="5dip"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:gravity="top"
			        android:text="@string/act_lbl_homFaves"
			        android:textSize="20dip"
			        android:textColor="#174a76"
			        android:textStyle="bold"
			    />
	      	  	<LinearLayout
			        android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    >   
	        
				    <ImageView 
					    android:src="@drawable/dshb_btn_hom_04_faves"
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content"
				    />
				    
				    <TextView
				        android:paddingTop="5dip"
				        android:paddingLeft="5dip"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:gravity="top"
				        android:text="@string/help_homFaves"
				        android:textColor="#000000"
				    />        
			    </LinearLayout>
	    	</LinearLayout>
	    </LinearLayout>    
	        
	    <!-- Augmented Reality -->
	    <LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="5dip"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"> 
	      
	        <LinearLayout
				android:orientation="vertical"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
				>
	      
				<TextView
			        android:paddingTop="5dip"
			        android:paddingLeft="5dip"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:gravity="top"
			        android:text="@string/act_lbl_homAugReal"
			        android:textSize="20dip"
			        android:textColor="#174a76"
			        android:textStyle="bold"
			    />
	      	  	<LinearLayout
			        android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    >   
	        
				    <ImageView 
					    android:src="@drawable/dshb_btn_hom_05_augreal"
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content"
				    />
				    
				    <TextView
				        android:paddingTop="5dip"
				        android:paddingLeft="5dip"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:gravity="top"
				        android:text="@string/help_homAugReal"
				        android:textColor="#000000"
				    />        
			    </LinearLayout>
	    	</LinearLayout>
	    </LinearLayout>     
	        
	    <!-- Net Closer -->
	    <LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="5dip"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"> 
	      
	        <LinearLayout
				android:orientation="vertical"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
				>
	      
				<TextView
			        android:paddingTop="5dip"
			        android:paddingLeft="5dip"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:gravity="top"
			        android:text="@string/act_lbl_homNetCloser"
			        android:textSize="20dip"
			        android:textColor="#174a76"
			        android:textStyle="bold"
			    />
	      	  	<LinearLayout
			        android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    >   
	        
				    <ImageView 
					    android:src="@drawable/dshb_btn_hom_06_netcloser"
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content"
				    />
				    
				    <TextView
				        android:paddingTop="5dip"
				        android:paddingLeft="5dip"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:gravity="top"
				        android:text="@string/help_homNetCloser"
				        android:textColor="#000000"
				    />        
			    </LinearLayout>
	    	</LinearLayout>
	    </LinearLayout>      
	    
  </LinearLayout>

</ScrollView>